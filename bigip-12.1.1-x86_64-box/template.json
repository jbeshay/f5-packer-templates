{
  "variables": {
    "F5_NAME": "BIGIP-12.1.1.0.0.184"
  },
  "builders": [
    {
      "name": "{{ user `F5_NAME` }}",
      "type": "qemu",
      "format": "qcow2",
      "accelerator": "kvm",
      "iso_url": "software/{{ user `F5_NAME` }}.iso",
      "iso_checksum": "598a64b925da5ff8fcafe9174e9c8fc7",
      "iso_checksum_type": "md5",
      "ssh_username": "root",
      "ssh_password": "default",
      "ssh_wait_timeout": "30000s",
      "shutdown_command": "shutdown -h now",
      "vm_name": "{{ user `F5_NAME` }}",
      "boot_wait": "60s",
      "boot_command": [
        "<enter><wait5>",
        "<enter><wait5>",
        "<enter>"
      ],
      "disk_size": "160000",
      "qemuargs": [
        ["-m","4096"],
        ["-smp","2"],
        ["-boot","order=c"]
      ]
    }
  ],
  "post-processors": [
    {
      "type": "vagrant",
      "compression_level": 9,
      "output": "{{ build_name }}.box"
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "inline": [
        "mkdir /shared/vagrant",
        "exit 0"
      ],
      "pause_before": "60s"
    },
    {
      "type": "file",
      "source": "files",
      "destination": "/shared/vagrant"
    },
    {
      "type": "shell",
      "scripts": [
        "scripts/filesystem-rw.sh",
        "scripts/sudo.sh"
      ]
    },
    {
      "type": "shell",
      "inline": [
        "tmsh save /sys config",
        "exit 0"
      ]
    },
    {
      "type": "shell",
      "inline": [
        "tmsh create auth user vagrant password vagrant partition-access add { all-partitions { role admin } } shell bash",
        "exit 0"
      ]
    },
    {
      "type": "shell",
      "scripts": [
        "scripts/vagrant.sh"
      ]
    },
    {
      "type": "shell",
      "inline": [
        "tmsh save /sys config",
        "exit 0"
      ]
    },
    {
      "type": "shell",
      "scripts": [
        "scripts/cleanup.sh",
        "scripts/wait-for-bigip.sh"
      ],
      "start_retry_timeout": "30m",
      "pause_before": "120s"
    }
  ]
}
